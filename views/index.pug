  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      .container-fluid
        a.navbar-brand(href="/") Online Store
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarSupportedContent", aria-controls="navbarSupportedContent", aria-expanded="false", aria-label="Toggle navigation")
          span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            li.nav-item
              a.nav-link.active(href="/", aria-current="page") Home
            li.nav-item
              a.nav-link(href="/category") Categoty
            if (user)
              li.nav-item
                a.nav-link(href="/cart") Cart
            if (user)
              li.nav-item
                a.nav-link(href="/profile")= user.username
              li.nav-item
                a.nav-link(href="/logout") Logout
            else 
              li.nav-item
                a.nav-link(href="/login") login
              li.nav-item
                a.nav-link(href="/signup") Sign up
            if (user)
              if (user.isAdmin)
                li.nav-item
                  a.nav-link(href="/message") messages
                li.nav-item
                  a.nav-link(href="/orders") orders
                li.nav-item
                  a.nav-link(href="/products-admin") products
                li.nav-item
                  a.nav-link(href="/add-product") Add new product
    .landing
      if (messages.info)
        .alert.alert-dark(role="alert")
          .message.info
            span= messages.info
      .overlay
      #carouselExampleCaptions.carousel.slide(data-bs-ride="carousel")
        .carousel-indicators.z
          button.active(type="button", data-bs-target="#carouselExampleCaptions", data-bs-slide-to="0", aria-current="true", aria-label="Slide 1")
          button(type="button", data-bs-target="#carouselExampleCaptions", data-bs-slide-to="1", aria-label="Slide 2")
          button(type="button", data-bs-target="#carouselExampleCaptions", data-bs-slide-to="2", aria-label="Slide 3")
        .carousel-inner
          .carousel-item.active
            img.d-block.w-100(src="images/slider-en.jpg", alt="...")
            .carousel-caption
              h1(class="wow animate__fadeInUp", data-wow-duration="2s")
                | SPECIALISTS
              p(class="wow animate__fadeInUp", data-wow-duration="2.5s")  Sign in for the best experience
              p(class="wow animate__fadeInUp lii", data-wow-duration="2.8s") Online or Over the Phone
          .carousel-item
            img.d-block.w-100(src="images/slider-en_1.jpg", alt="...")
            .carousel-caption
              h1(class="wow animate__fadeInUp", data-wow-duration="2s")
                | SPECIALISTS
              p(class="wow animate__fadeInUp", data-wow-duration="2.5s")  Sign in for the best experience
              p(class="wow animate__fadeInUp lii", data-wow-duration="2.8s") Online or Over the Phone
          .carousel-item
            img.d-block.w-100(src="images/1.png", alt="...")
            .carousel-caption
              h1(class="wow animate__fadeInUp", data-wow-duration="2s")
                | SPECIALISTS
              p(class="wow animate__fadeInUp", data-wow-duration="2.5s")  Sign in for the best experience
              p(class="wow animate__fadeInUp lii", data-wow-duration="2.8s") Online or Over the Phone
        button.carousel-control-prev.z(type="button", data-bs-target="#carouselExampleCaptions", data-bs-slide="prev")
          span.carousel-control-prev-icon(aria-hidden="true")
          span.visually-hidden Previous
        button.carousel-control-next.z(type="button", data-bs-target="#carouselExampleCaptions", data-bs-slide="next")
          span.carousel-control-next-icon(aria-hidden="true")
          span.visually-hidden Next
    include search.pug
    #page-content.page-content.page-container
      .padding
        .row.container-fluid
          .col-lg-12.grid-margin.stretch-card
            .card
              .card-body
                h4.card-title.text-center Our Products
                div(class="owl-carousel")
                  each product in products 
                    .item
                      .box
                        .image
                          img(src=`/img/products/${product.image}`)
                        hr
                        span
                          if (product.discount)
                            ins= `${product.discount}$`
                            del= `${product.price}$`
                          else 
                            del= `${product.price}$`
                        .deta
                          h3=product.name 
                          //-p Lorem ipsum dolor, sit amet consectetur adipisicing elit.  
                        hr
                        .bt
                          a.add.ripple-effect(href=`/add-to-cart/${product._id}`) add to cart
                          a.view(href=`/product-detail/${product.slug}`) view details
    .wrapper
      a(href="/cart")
        button.btn.shop.d-flex.align-items-center.justify-content-center
          i.fas.fa-cart-plus
      .target.d-flex.align-items-center.justify-content-center
